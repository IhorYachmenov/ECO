<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/padding_on_linear_layout">

        <com.romainpiel.shimmer.ShimmerTextView
            android:id="@+id/shimmer_text_main_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-light"
            android:paddingStart="@dimen/padding_start"
            android:text="@string/main_activity_image"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="@dimen/text_size_main_screen" />

        <ImageView
            android:id="@+id/main_leaf"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/description_of_action_image_main_screen"
            android:paddingEnd="@dimen/padding_end"
            android:src="@drawable/leaf" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/eco_earth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/description_of_logo_image_main_screen"
            android:scaleType="fitCenter"
            android:src="@drawable/earth" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/eco_text_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:fontFamily="sans-serif-medium"
            android:src="@drawable/eco_text_w" />
    </RelativeLayout>
</RelativeLayout>